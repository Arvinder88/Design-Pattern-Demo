@using DataModels.DataObjects;
@using DataAccess.Repositories;
@model Customer
@{
    ViewBag.Title = "AddCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddCustomer</h2>
<br />
<form action="AddCustomer" method="post" id="theForm">
    @Html.HiddenFor(y => y.CustomerID)

    <div class="form-group">
        <div class="row">
            <div class="col-lg-3">First Name</div>
            <div class="col-lg-5">
                @Html.TextBoxFor(x => x.FirstName, new { @Class = "form-control" })
            </div>
            <div class="col-lg-4">@Html.ValidationMessageFor(model => model.FirstName)</div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-3">last Name</div>
            <div class="col-lg-5">
                @Html.TextBoxFor(x => x.LastName, new { @Class = "form-control" })
            </div>
            <div class="col-lg-4">@Html.ValidationMessageFor(model => model.LastName)</div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-3">Address</div>
            <div class="col-lg-5">
                @Html.TextBoxFor(x => x.Address, new { @Class = "form-control" })
            </div>
            <div class="col-lg-4">@Html.ValidationMessageFor(model => model.Address)</div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-3">Mobile No</div>
            <div class="col-lg-5">
                @Html.TextBoxFor(x => x.Mobile, new { @Class = "form-control" })
            </div>
            <div class="col-lg-4">@Html.ValidationMessageFor(model => model.Mobile)</div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-3">Secondary Mobile No</div>
            <div class="col-lg-5">
                @Html.TextBoxFor(x => x.SecondaryMobile, new { @Class = "form-control" })
            </div>
            <div class="col-lg-4">@Html.ValidationMessageFor(model => model.SecondaryMobile)</div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-5">
                <input type="submit" value="Create" class="btn btn-primary" />
                @Html.ActionLink("Search", "CustomerDetails", "", new { @class = "btn btn-primary" })
            </div>
            <div class="col-lg-4"></div>
        </div>
    </div>

</form>
